<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".esc_sedes_ENCB"
    android:layout_gravity="center_vertical">

    <!--Back Row-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btnBackToSchools"
            android:layout_width="40dp"
            android:paddingVertical="7dp"
            android:paddingLeft="15dp"
            android:paddingRight="9dp"
            android:contentDescription="@string/descripcionBack"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/back_row_guinda"/>
    </LinearLayout>

    <!--Escudo-->
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:background="@drawable/encb"/>

    <!--Nombre Escuela-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/guinda"
        android:textColor="@color/white"
        android:text="@string/compENCB"
        android:textAlignment="center"
        android:textSize="20sp"
        android:paddingHorizontal="30dp"
        android:paddingVertical="13dp"
        android:layout_marginTop="3dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/guinda"
        android:textAlignment="center"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:text="Actualmente la ENCB se encuentra en una etapa de transición, por lo que algunas carreras se encuentran distribuidas entre Unidad Santo Tomás y Unidad Zacatenco. \nSin embargo, no son sedes independientes." />

    <!-- Sedes -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/guinda"
        android:text="@string/sedes"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="15dp"/>

    <!--ENCB Sto Tomas -->
    <LinearLayout
        android:id="@+id/btnEscEscENCB_UST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/guinda"
        android:orientation="vertical"
        android:weightSum="10"
        android:paddingVertical="5dp"
        android:paddingHorizontal="9dp"
        android:layout_marginVertical="7dp"
        android:layout_marginHorizontal="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/abrENCB_UST"
                android:textColor="@color/gris"
                android:textSize="12sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:background="@drawable/next_row" />
        </LinearLayout>

        <TextView
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/compUST"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:textColor="@color/white"

            />
    </LinearLayout>

    <!--ENCB Zacatenco -->
    <LinearLayout
        android:id="@+id/btnEscEscENCB_UZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/guinda"
        android:orientation="vertical"
        android:weightSum="10"
        android:paddingVertical="5dp"
        android:paddingHorizontal="9dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="7dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/abrENCB_UZ"
                android:textColor="@color/gris"
                android:textSize="12sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="14dp"
                android:background="@drawable/next_row" />
        </LinearLayout>

        <TextView
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/compUZ"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:textColor="@color/white"

            />
    </LinearLayout>

</LinearLayout>