<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".carr_LNutri"
    android:layout_gravity="center_vertical">

    <!-- Barra Superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/backCarr"
            android:layout_width="40dp"
            android:paddingVertical="7dp"
            android:paddingLeft="15dp"
            android:paddingRight="9dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/descripcionBack"
            app:srcCompat="@drawable/back_row_guinda"/>

        <ImageView
            android:id="@+id/carrLogoEsc"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:paddingVertical="5dp"
            app:srcCompat="@drawable/escom"/>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/guinda"
            android:layout_marginLeft="3dp"
            android:layout_marginVertical="5dp"/>

        <TextView
            android:id="@+id/txtCarrEsc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/guinda"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:layout_marginLeft="12dp"
            android:text="ESCUELA"/>

    </LinearLayout>

    <!--Nombre de Carrera-->
    <TextView
        android:id="@+id/txtNombreCarrera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/carrISC"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingVertical="12dp"
        android:paddingHorizontal="20dp"
        android:textSize="20sp"
        android:background="@color/guinda"/>

    <!--Scroll View-->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <!--Imagen Carrera-->
            <ImageView
                android:id="@+id/imgCarrera"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/img_isc"/>

            <!--Objetivo-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingVertical="17dp"
                android:paddingHorizontal="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/guinda"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/objetivo" />

                <TextView
                    android:id="@+id/txtObjetivoCarrera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/guinda"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:text="@string/objISC"/>
            </LinearLayout>

            <!--Perfil de Ingreso-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingVertical="17dp"
                android:paddingHorizontal="15dp"
                android:background="@color/guinda"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/ingreso" />

                <TextView
                    android:id="@+id/txtPerfilIngreso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:text="@string/ingISC"/>
            </LinearLayout>

            <!--Perfil de Egreso-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingVertical="17dp"
                android:paddingHorizontal="15dp"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/guinda"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/egreso" />

                <TextView
                    android:id="@+id/txtPerfilEgreso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/guinda"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:text="@string/egreISC"/>
            </LinearLayout>

            <!--Bajar Mapa Curricular-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingVertical="17dp"
                android:paddingHorizontal="15dp"
                android:background="@color/guinda"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/mapaCurricular" />

                <ImageView
                    android:id="@+id/btnMapaCurricular"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/pdf_icon"/>


            </LinearLayout>

            <!--Requisitos-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingVertical="17dp"
                android:paddingHorizontal="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/guinda"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/requisitos" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/guinda"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:text="@string/requisitosTodo"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>